<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HarManager.ViewModels"
        xmlns:views="using:HarManager.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="HarManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="HAR Purifier">
    
    <ContentControl Content="{Binding CurrentPage}">
        <ContentControl.DataTemplates>
            <DataTemplate DataType="{x:Type vm:ProjectListViewModel}">
                <views:ProjectListView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:WorkspaceViewModel}">
                <views:WorkspaceView />
            </DataTemplate>
        </ContentControl.DataTemplates>
    </ContentControl>
</Window>

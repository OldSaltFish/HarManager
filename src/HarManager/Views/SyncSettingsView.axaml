<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HarManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HarManager.Views.SyncSettingsView"
             x:DataType="vm:SyncSettingsViewModel">
  
  <Grid RowDefinitions="Auto,*" Margin="20">
    <TextBlock Text="Cloud Sync Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
    
    <StackPanel Grid.Row="1" Spacing="15" MaxWidth="500" HorizontalAlignment="Left">
      
      <StackPanel>
        <TextBlock Text="Provider Type"/>
        <ComboBox ItemsSource="{Binding ProviderNames}" 
                  SelectedItem="{Binding SelectedProviderName}"
                  HorizontalAlignment="Stretch"/>
      </StackPanel>
      
      <StackPanel>
        <TextBlock Text="Base URL"/>
        <TextBox Text="{Binding BaseUrl}" Watermark="https://example.com/dav/"/>
      </StackPanel>
      
      <StackPanel>
        <TextBlock Text="{Binding SelectedProviderName, StringFormat='Username / Token ({0})'}"/>
        <TextBox Text="{Binding Username}" Watermark="Username or API Token"/>
      </StackPanel>
      
      <StackPanel IsVisible="{Binding IsWebDav}">
        <TextBlock Text="Password (WebDAV only)"/>
        <TextBox Text="{Binding Password}" PasswordChar="*" Watermark="Password"/>
      </StackPanel>
      
      <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
        <Button Command="{Binding TestConnectionCommand}" Content="Test Connection"/>
        <Button Command="{Binding SaveCommand}" Content="Save &amp; Close" Classes="accent"/>
        <Button Command="{Binding CancelCommand}" Content="Cancel"/>
      </StackPanel>
      
      <TextBlock Text="{Binding StatusMessage}" 
                 IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
                 TextWrapping="Wrap"/>
      
    </StackPanel>
  </Grid>
</UserControl>

